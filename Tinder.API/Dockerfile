#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 443
EXPOSE 80	

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Tinder.API/Tinder.API.csproj", "Tinder.API/"]
COPY ["Tinder.BLL/Tinder.BLL.csproj", "Tinder.BLL/"]
COPY ["Tinder.DAL/Tinder.DAL.csproj", "Tinder.DAL/"]
RUN dotnet restore "./Tinder.API/Tinder.API.csproj"
COPY . .
WORKDIR "/src/Tinder.API"
RUN dotnet build "./Tinder.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./Tinder.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Tinder.API.dll"]